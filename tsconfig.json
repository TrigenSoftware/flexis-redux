{
	"compilerOptions": {
		"outDir": "lib",
		"declaration": true,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext",
		"jsx": "react",
		"noImplicitAny": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"sourceMap": true,
		"lib": [
			"es2017"
		]
	},
	"include": [
		"src/**/*"
	]
}
