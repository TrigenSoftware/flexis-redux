{
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"jsx",
		"json"
	],
	"testRegex": "/test/.*\\.spec\\.ts$",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.{ts,tsx}",
		"!**/*.d.ts",
		"!**/node_modules/**"
	],
	"coverageReporters": [
		"lcovonly",
		"text"
	],
	"globals": {
		"ts-jest": {
			"diagnostics": false
		}
	}
}
